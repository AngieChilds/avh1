<p id="notice"><%= notice %></p>

<h1>Prizes</h1>
<table>
  <thead>
    <tr>
      <th>Text</th>
   
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @prizes.each do |prize| %>
      <tr>
        <td><%= prize.user.try(:player) %></td>
        <td><%= prize.prize_type %>
        <td><%= prize.text %></td>
        
        <td><%= link_to 'Show', prize %></td>
        <td><%= link_to 'Edit', edit_comp_prize_path(prize) %></td>
        <td><%= link_to 'Destroy', prize, method: :delete, data: { confirm: 'Are you sure?' } %></td>
     </tr>
    <% end %>
  </tbody>
</table>
 



