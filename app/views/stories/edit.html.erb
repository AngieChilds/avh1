<h1>Editing Story</h1>
<%= form_for([@story.comp, @story]) do |f| %>

<% if @story.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@story.errors.count, "error") %> prohibited this comment from being saved:</h2>

      <ul>
      <% @story.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_area(:title) %>
  </div>
 

  <div class="field">
    <%= f.label :text %>
    <%= f.text_area(:text, size: "50x30") %>
  </div>

 
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>


<%= link_to (@story.title), comp_story_path([@story]) %>

<%= link_to 'Back', comp_stories_path(@story.comp) %>
